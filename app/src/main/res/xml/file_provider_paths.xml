<?xml version="1.0" encoding="utf-8"?>
<paths>

    <!--
        FileProvider configuration per condivisione sicura file backup

        Percorsi supportati:
        - files/backups/ → Directory backup principali
        - files/exports/ → Directory export temporanei
        - cache/ → File temporanei per sharing
        - external_files/ → Backup su storage esterno (se richiesto)
    -->
    <!-- Directory interna completa (se necessaria) -->
    <files-path
        name="internal_files"
        path="." />


    <!-- PHOTOS -->

    <!-- Internal storage per foto -->
    <files-path
        name="photos"
        path="photos/" />

    <!-- Cache directory per file temporanei -->
    <cache-path
        name="tmp_photos"
        path="tmp/" />


    <!-- DOCUMENTS -->

    <!-- External storage per export documenti -->
    <external-files-path
        name="exported_docs"
        path="QReport/Exports/" />

    <!-- Internal storage per export interni -->
    <files-path
        name="internal_exports"
        path="exports/" />


    <!-- BACKUP -->

    <!-- Directory interna app per backup -->
    <files-path
        name="backup_files"
        path="backups/" />

    <!-- Directory esportazioni temporanee -->
    <files-path
        name="export_files"
        path="exports/" />

    <!-- Cache per file temporanei sharing -->
    <cache-path
        name="shared_cache"
        path="shared/" />

    <!-- Storage esterno dell'app (se backup external storage) -->
    <external-files-path
        name="external_backup"
        path="backups/" />

    <!-- Download directory (se backup condivisi) -->
    <external-path
        name="external_download"
        path="Download/QReport/" />
</paths>